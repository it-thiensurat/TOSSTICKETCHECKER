<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"

            android:background="@drawable/ppp"/>

        <LinearLayout
            android:id="@+id/countContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/userImage"
            android:layout_toRightOf="@+id/userImage"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratMediumTextView
                    android:id="@+id/userPostsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="ปัญหา"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/followerCountContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratMediumTextView
                    android:id="@+id/userFollowersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratTextView
               android:id="@+id/foller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="ผู้ติดตาม"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/followingCountContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratMediumTextView
                    android:id="@+id/userFollowingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="กำลังติดตาม"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratMediumTextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countContainer"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/userImage"
            android:layout_toLeftOf="@+id/fullName2"
            android:layout_toRightOf="@+id/userImage"
            android:layout_toStartOf="@+id/fullName2"
            android:layout_weight="1"
            android:hint="Your name"
            android:maxLines="1"
            android:singleLine="true"
            android:text="อัสนี แหวนหล่อ"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratMediumTextView
            android:id="@+id/fullName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countContainer"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/foller"
            android:layout_toLeftOf="@+id/profileRefreshProgress"
            android:layout_toRightOf="@+id/foller"
            android:layout_toStartOf="@+id/profileRefreshProgress"

            android:layout_weight="1"
            android:hint="Your name"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Sale"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            tools:ignore="NotSibling,RtlHardcoded" />


        <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratTextView
        android:id="@+id/txt_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="ทีม:ARWEW"
        android:layout_below="@+id/fullName"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/userImage"
        android:layout_toLeftOf="@+id/profileRefreshProgress"
        android:layout_toRightOf="@+id/userImage"
        android:layout_toStartOf="@+id/profileRefreshProgress"

        android:textColor="@android:color/white"
        android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/profileRefreshProgress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/countContainer"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_setting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/ll_top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_settings_white_24dp"
        app:fabSize="mini" />



    <android.support.design.widget.AppBarLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:background="@color/gray">





        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"/>
    </android.support.design.widget.AppBarLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dd"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>



    <RelativeLayout
        android:id="@+id/profileFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_top"
        android:visibility="gone"/>

    <!--<android.support.v4.view.ViewPager--><!--android:id="@+id/activity_profile_view_pager"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent" />-->
</RelativeLayout>