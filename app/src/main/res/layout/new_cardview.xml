<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/userDetailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >




            <ImageView
                android:id="@+id/list_item_status_sale"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/list_item_home_dislike"
                android:layout_toStartOf="@+id/list_item_home_dislike"
                android:padding="4dp"
                android:src="@drawable/baseline_person_pin_black_18dp"
                android:tint="@color/gray"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/list_item_home_dislike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/list_item_home_menu"
                android:layout_toStartOf="@+id/list_item_home_menu"
                android:padding="4dp"
                android:src="@drawable/ic_bookmark_gray_18dp" />

            <ImageView
                android:id="@+id/list_item_home_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:padding="4dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:tint="@color/colorTextSecondary" />
        </RelativeLayout>



        <LinearLayout

            android:id="@+id/linear_coler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_gravity="right"

            android:background="@color/DarkBlue"
            android:padding="4dp">





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/roun_rect_orange15"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="สถานะ :"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/text_status" />
            </LinearLayout>





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14sp"
                    android:text="ส่งเรื่องให้หน่วยงานที่เกี่ยวข้อง"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/txt_status_workcode" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_status_closing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@drawable/roun_rect_orange17"
                >
                <TextView
                    android:id="@+id/txt_status_closing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="ปิดงานแล้ว"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/text_closing" />
            </LinearLayout>

        </LinearLayout>




        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายละเอียดปัญหา :"
            android:textSize="10sp"
            android:layout_marginLeft="0dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input2"

            >

            <TextView
                android:id="@+id/new_message_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:textSize="12sp" />
        </RelativeLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายละเอียดปัญหาเพิ่มเติม :"
            android:textSize="10sp"
            android:layout_marginLeft="0dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input2"

            >

            <TextView
                android:id="@+id/new_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:textSize="12sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/InformID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="test"
            android:textColor="@color/accent"/>

        <TextView
            android:id="@+id/contno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="test"
            android:textColor="@color/accent"/>

    </LinearLayout>

</android.support.v7.widget.CardView>