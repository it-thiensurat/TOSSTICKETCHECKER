<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/li_line6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/Navy"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>


    </LinearLayout>
        <RelativeLayout
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_cancal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_close_black_24dp"
                android:backgroundTint="@color/Red"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>




    <LinearLayout
        android:id="@+id/li_line7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สรุประดับการตรวจสอบ:"
            android:textSize="12sp"
            android:layout_marginLeft="0dp"

            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/roun_rect_orange22"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_line8"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/relativeLayout2"

        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"

            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/count3"
                android:layout_width="50dip"
                android:layout_height="50dip"


                android:background="@drawable/bg_circle"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="26dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="ผ่าน"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>


        <View
            android:layout_width="50dp"
            android:layout_height="50dp"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"

            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/count2"
                android:layout_width="50dip"
                android:layout_height="50dip"


                android:background="@drawable/bg_circle30"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="26dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="เฝ้าระวัง"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"

            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/count1"
                android:layout_width="50dip"
                android:layout_height="50dip"


                android:background="@drawable/bg_circle01"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="26dp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="ไม่ผ่าน"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>






        <LinearLayout
            android:id="@+id/li_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"

            >

            <RelativeLayout
                android:id="@+id/r_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_round_coler2"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"

                        android:background="@drawable/ic_save_black_24dp"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  บันทึกรายการ  "
                        android:textSize="14sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="0dp"
                        />
                </LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r_save52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:background="@drawable/background_round_coler4"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"

                        android:background="@drawable/ic_send_white_24dp"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="แจ้งปัญหา"
                        android:textSize="14sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="0dp"
                        android:maxLines="1"
                        />
                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

        <LinearLayout
            android:id="@+id/li_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="กรุณาเลือกสีระดับการตรวจสอบ:"
                android:textSize="12sp"
                android:layout_marginLeft="0dp"

                android:textColor="@color/Red"
                android:textStyle="bold"
                />
        </LinearLayout>



    <LinearLayout
            android:id="@+id/li_saddve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0sp"
            android:layout_gravity="center"
            android:gravity="center"

            >

            <RelativeLayout
                android:id="@+id/r_sddddave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_round_coler2"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >


                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"

                        android:background="@drawable/icon_success"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  เสร็จสิ้น  "
                        android:textSize="14sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="0dp"
                        android:textColor="@color/White"
                        />
                </LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r_save2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:background="@drawable/background_round_coler4"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"

                        android:background="@drawable/ic_send_white_24dp"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="แจ้งปัญหา"
                        android:textSize="14sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="0dp"
                        android:maxLines="1"
                        />
                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>