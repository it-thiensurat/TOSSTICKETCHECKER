<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/li_line6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/Navy"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>


    </LinearLayout>





    <LinearLayout
        android:id="@+id/li_line7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="นัดเก็บเงินงวด 2:"
            android:textSize="12sp"
            android:layout_marginLeft="0dp"

            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/roun_rect_orange22"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/li_pay_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0sp"
            android:visibility="gone"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="นัดเก็บเงินงวด 2 "
                android:textSize="12sp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/roun_rect_orange22"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:visibility="visible"
                >

                <CheckBox
                    android:id="@+id/CheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:text="นัดเก็บเงินงวด 2"
                    android:visibility="gone"/>







            </RelativeLayout>



        </LinearLayout>










        <LinearLayout
            android:id="@+id/li_pay_two2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible"

            >
            <TextView

                android:layout_width="wrap_content"

                android:textSize="10sp"
                android:layout_height="wrap_content"

                android:text="วันที่ทำสัญญา"
                android:background="@drawable/roun_rect_orange23"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/date222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="11/12/2018"
                android:layout_marginLeft="2dp"
                android:textColor="@color/Yellow"
                />










            <TextView

                android:layout_width="wrap_content"

                android:textSize="10sp"
                android:layout_height="wrap_content"

                android:text="วันเก็บเงินงวดแรก"
                android:background="@drawable/roun_rect_orange23"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/date33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="11/12/2018"
                android:layout_marginLeft="2dp"
                android:textColor="@color/Yellow"
                android:visibility="gone"
                />





        </LinearLayout>




        <LinearLayout
            android:id="@+id/li_pay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible"

            >
            <TextView

                android:layout_width="wrap_content"

                android:textSize="10sp"
                android:layout_height="wrap_content"

                android:text="วันที่นัดเก็บเงินงวด 2"
                android:background="@drawable/roun_rect_orange23"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="11/12/2018"
                android:layout_marginLeft="5dp"
                android:textColor="@color/Yellow"
                />


        </LinearLayout>








        <LinearLayout
            android:id="@+id/li_pay222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible"

            >

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/image_tal3"
                android:visibility="visible"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@drawable/calendar_icon"
                android:backgroundTint="@color/Green"/>

            <TextView
                android:id="@+id/txt_day_nad2"
                android:layout_width="wrap_content"

                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:visibility="visible"

                android:layout_marginLeft="5dp"
                android:textColor="@color/Red"
                android:maxLines="3"
                />

        </LinearLayout>




    <LinearLayout
            android:id="@+id/li_saddve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30sp"
            android:layout_gravity="center"
            android:gravity="center"

            >

            <RelativeLayout
                android:id="@+id/r_sddddave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_round_coler2"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >


                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"

                        android:background="@drawable/icon_success"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  บันทึก  "
                        android:textSize="14sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="0dp"
                        android:textColor="@color/White"
                        />
                </LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r_save2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:background="@drawable/background_round_coler4"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"

                        android:background="@drawable/ic_send_white_24dp"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="แจ้งปัญหา"
                        android:textSize="14sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="0dp"
                        android:maxLines="1"
                        />
                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>