                                                android:text="A748SD"
                                                android:textColor="@color/gold"
                                                android:textSize="@dimen/text_size" />
                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:layout_marginLeft="0sp"
                                            android:orientation="horizontal">

                                            <TextView

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="หัวหน้า : "
                                                android:textColor="@color/bg_main"
                                                android:textSize="6sp"
                                                android:textStyle="bold"

                                                android:layout_marginTop="5sp"/>





                                            <TextView
                                                android:id="@+id/txt_boss"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="นาย ใจสั่งมา โอเย "
                                                android:textColor="@color/bg_main"
                                                android:textSize="@dimen/text_size"
                                                android:textStyle="bold"
                                                android:layout_marginTop="5sp"/>





                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:layout_marginLeft="0sp"
                                            android:orientation="horizontal">

                                            <TextView

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="ตำแหน่ง : หัวหน้า "
                                                android:textColor="@color/bg_main"
                                                android:textSize="6sp"
                                                android:textStyle="bold"

                                                android:layout_marginTop="5sp"/>




                                            <TextView
                                                android:id="@+id/txt_bossposition"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="Saleteamleader"
                                                android:textColor="@color/MediumSeaGreen"
                                                android:textSize="@dimen/text_size"
                                                android:textStyle="bold"
                                                android:layout_marginTop="5sp"/>





                                        </LinearLayout>













                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginLeft="20sp"
                                        android:layout_marginRight="20sp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:layout_marginLeft="0sp"
                                            android:orientation="horizontal">

                                            <TextView

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="ลูกค้า : "
                                                android:textColor="@color/bg_main"
                                                android:textSize="6sp"
                                                android:textStyle="bold"

                                                android:layout_marginTop="5sp"/>





                                            <TextView
                                                android:id="@+id/txt_CustomerName"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="นาย นิษา ภู่เกษม "
                                                android:textColor="@color/bg_main"
                                                android:textSize="@dimen/text_size"
