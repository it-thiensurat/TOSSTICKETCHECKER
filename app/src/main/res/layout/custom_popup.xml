                                                android:id="@+id/txt_teamcode"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5sp"
                                                android:layout_alignLeft="@+id/txt_conno"
                                                android:layout_below="@+id/ddf"
