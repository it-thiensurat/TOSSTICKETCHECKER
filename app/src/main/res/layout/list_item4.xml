<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/list_item_home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/userDetailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/list_item_home_foxy_img"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:contentDescription="444"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/ic_person_gray_24dp" />

            <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratMediumTextView
                android:id="@+id/list_item_home_posted_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/list_item_home_foxy_img"
                android:layout_toLeftOf="@+id/list_item_status_sale"
                android:layout_toRightOf="@+id/list_item_home_foxy_img"
                android:layout_toStartOf="@+id/list_item_status_sale"
                android:text="Mike"
                android:textColor="#262627"
                android:textSize="12sp"
                android:visibility="gone"
                android:textStyle="bold" />


            <com.tsr.tsrproblemreport_tossticket_checker.cedit_all_problem_from_web.view.MontserratTextView
                android:id="@+id/list_item_home_posted_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_home_posted_name"
                android:layout_gravity="center"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/list_item_home_foxy_img"
                android:text="Posted 0 seconds ago"
                android:textColor="#ababab"
                android:visibility="gone"
                android:textSize="10sp" />


            <TextView

                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/ddd"
                android:layout_toStartOf="@+id/ddd"
                android:padding="4dp"
                android:text="ดูรายละเอียดการขาย / ประวัติการแก้ไข"
                android:textColor="@color/Red"
                android:textSize="8sp"

                android:visibility="visible"/>
            <ImageView
                android:id="@+id/ddd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/list_item_status_sale"
                android:layout_toStartOf="@+id/list_item_status_sale"
                android:padding="4dp"
                android:src="@drawable/baseline_arrow_right_alt_black_18"
                android:tint="@color/Red"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/list_item_status_sale"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/list_item_history"
                android:layout_toStartOf="@+id/list_item_history"
                android:padding="4dp"
                android:src="@drawable/baseline_person_pin_black_18dp"
                android:tint="@color/gray"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/list_item_history"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/list_item_home_dislike"
                android:layout_toStartOf="@+id/list_item_home_dislike"
                android:padding="2dp"
                android:tint="@color/gray"
                android:src="@drawable/ic_his_18" />

            <ImageView
                android:id="@+id/list_item_home_dislike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/list_item_home_menu"
                android:layout_toStartOf="@+id/list_item_home_menu"
                android:padding="4dp"
                android:visibility="gone"
                android:src="@drawable/ic_bookmark_gray_18dp" />

            <ImageView
                android:id="@+id/list_item_home_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:padding="4dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:tint="@color/colorTextSecondary" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_item_home_txt_pic_vid_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




































            <android.support.v7.widget.CardView

                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="1dp"
                card_view:cardMaxElevation="1dp"
                card_view:contentPadding="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/background4"
                        android:padding="4dp">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.64"

                            android:orientation="vertical">

                            <TextView
                                android:background="@drawable/roun_rect_orange3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="เลขที่การแจ้ง:"
                                android:textSize="@dimen/text_12"
                                />



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="vertical">
                            <TextView

                                android:id="@+id/InformID"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1"
                                android:maxLines="1"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="@dimen/text_12"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"

                            android:orientation="vertical">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"

                            android:orientation="vertical">
                            <TextView
                                android:background="@drawable/roun_rect_orange16"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="เลขที่สัญญา:"
                                android:textSize="@dimen/text_12"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/contno"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="@dimen/text_12"
                                />

                        </LinearLayout>


                    </LinearLayout>







































































                </LinearLayout>

            </android.support.v7.widget.CardView>

























        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>