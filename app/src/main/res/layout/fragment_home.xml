<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tsr.tsrproblemreport_tossticket_checker.fragment.HomeFragment"
    android:background="@color/colorAccent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"/>
    <RelativeLayout


        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">


        <ImageView
            android:id="@+id/settime_logout"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/blue"
            android:scaleType="fitXY"
            android:src="@drawable/picture4" />

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignBottom="@+id/settime_logout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_circle"

            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/texttitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname_intro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:text="ตำแหน่ง"
            android:textColor="@color/Black"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settime_logout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="WELCOME"
            android:textColor="@color/Crimson"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtname_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="นาย xxx xxxx\" />

        <TextView
            android:id="@+id/txtposition_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname_intro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:text="Sale" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtposition_intro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="หัวหน้า"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/namegroub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boss"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="aaa" />

        <ImageView
            android:id="@+id/edit_backgound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <TextView
            android:id="@+id/boss"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="TextView"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/img_profile"
            android:layout_alignStart="@+id/img_profile" />


    </RelativeLayout>


</FrameLayout>
