<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgproduct"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_below="@+id/btnbuy"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:background="@drawable/bg_circle" />

    <Button
        android:id="@+id/btnbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Buy"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtname_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="นาย อัสนี แหวนหล่อ"
        android:layout_below="@+id/imgproduct"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_xml_btn_yellow"
        android:text="  บันทึก  "
        android:layout_marginTop="184dp"
        android:layout_below="@+id/aaa"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/aaa"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_position"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:background="@color/Wheat"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/txt_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="aaa"
        android:textColor="@color/Blue"
        android:layout_below="@+id/txtname_sale"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
