<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.simplifiedcoding.firebasecloudmessaging.activity.UI_REGISTERSHOP3"
    android:background="@color/colorAccent">

    <RelativeLayout


        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2">


        <TextView
            android:id="@+id/texttitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname_intro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:text="ตำแหน่ง"
            android:textColor="@color/Black"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="WELCOME"
            android:textColor="@color/Crimson"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtname_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="นาย xxx xxxx\" />

        <TextView
            android:id="@+id/txtposition_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname_intro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:text="Sale" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtposition_intro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="หัวหน้า"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/namegroub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boss"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="aaa" />

        <TextView
            android:id="@+id/boss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="43dp"
            android:text="TextView" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtname_intro"
            android:layout_alignStart="@+id/txtname_intro"
            android:layout_below="@+id/namegroub"
            android:layout_marginTop="23dp"
            android:text="บันทึก" />

        <ImageView
            android:id="@+id/repassword"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentTop="true"
            android:layout_marginTop="93dp"
            android:layout_toLeftOf="@+id/txtname_intro"
            android:layout_toStartOf="@+id/txtname_intro"
            app:srcCompat="@drawable/ppp" />

        <ImageView
            android:id="@+id/settime_logout"
            android:layout_width="300dip"
            android:layout_height="150dip"
            android:layout_alignLeft="@+id/namegroub"
            android:layout_alignStart="@+id/namegroub"
            android:layout_alignTop="@+id/repassword"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/side_nav_bar"
            app:srcCompat="@drawable/circle" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/repassword"
            android:layout_alignRight="@+id/repassword"
            android:layout_below="@+id/repassword"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="33dp"
            android:text="profile image" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView16"
            android:layout_alignEnd="@+id/settime_logout"
            android:layout_alignRight="@+id/settime_logout"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:text="header image" />


    </RelativeLayout>


</FrameLayout>
