<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="550dip"
    android:background="@color/colorAccent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="3dp"
    card_view:contentPadding="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@color/bg_login">

        <TextView
            android:id="@+id/lbl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbl_name"
            android:layout_alignStart="@+id/lbl_name"
            android:layout_below="@+id/lbl_name"
            android:layout_marginTop="18dp"
            android:text="jan 13,2560"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lbl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/VollyNetworkImageView1"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/VollyNetworkImageView1"
            android:layout_toRightOf="@+id/VollyNetworkImageView1"
            android:text="assanee weanlor"
            android:textColor="?android:attr/textColorPrimaryDisableOnly"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/lbl_problem"
            android:layout_width="580dip"
            android:layout_height="50dip"
            android:layout_alignLeft="@+id/VollyNetworkImageView1"
            android:layout_alignStart="@+id/VollyNetworkImageView1"
            android:layout_below="@+id/VollyNetworkImageView1"
            android:layout_marginTop="15dp"
            android:text='สิ่งที่แล้วก็แล้วไป "คน ทุกคนย่อมมีเหตุผลของเขา" ขอน้อมรับความผิดไว้เพียงคนเดียว #นี้แหละน๊าเขาบอกว่าทำดีกับคนไม่ขึ้น. เห้ยยยย สวยไม่มาก แต่ท่ายากหนูเยอะ ^^ มีบริการ ส่ง ภายในขอนแก้นด้วยนะครับ ----ผมส่งเอง อากาศร้อนหรา..... พี่ก็พาเด็กๆมาจัดซะหน่อย จะหายไอตอนไหนหว่ากินอยู่อย่างนี้ 5555'
            android:textSize="14sp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VollyNetworkImageView1"
            android:layout_width="75dp"
            android:layout_height="75dip"
            android:layout_alignLeft="@+id/imageView8"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView8"
            android:layout_marginTop="14dp"
            android:background="@drawable/adele"
            android:src="@drawable/bee" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lbl_problem"
            android:layout_alignRight="@+id/lbl_problem"
            android:layout_below="@+id/lbl_problem"
            android:layout_marginTop="10dp"
            android:text="ดูเพิ่ม" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VollyNetworkImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignEnd="@+id/textView13"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignTop="@+id/textView13"
            android:layout_toRightOf="@+id/number"
            card_view:srcCompat="@drawable/s5" />

        <ImageView
            android:id="@+id/status2"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignBottom="@+id/lbl_time"
            android:layout_alignEnd="@+id/lbl_name"
            android:layout_alignRight="@+id/lbl_name"
            card_view:srcCompat="@drawable/ggg" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lbl_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            card_view:srcCompat="@android:drawable/ic_menu_more" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/bg_login">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp"
                android:text="ถูกใจ" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@android:drawable/ic_menu_view"
            android:layout_below="@+id/VollyNetworkImageView2"
            android:layout_toRightOf="@+id/number"
            android:layout_toEndOf="@+id/number" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@android:drawable/sym_action_chat"
            android:layout_below="@+id/VollyNetworkImageView2"
            android:layout_alignLeft="@+id/lbl_time"
            android:layout_alignStart="@+id/lbl_time"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แสดงความคิดเห็น"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toRightOf="@+id/lbl_time"
            android:layout_toEndOf="@+id/lbl_time" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@android:drawable/btn_star_big_on"
            android:layout_below="@+id/VollyNetworkImageView2"
            android:layout_toLeftOf="@+id/textView13"
            android:layout_toStartOf="@+id/textView13" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/VollyNetworkImageView2"
            android:layout_alignLeft="@+id/imageView7"
            android:layout_alignRight="@+id/VollyNetworkImageView2"
            android:layout_alignStart="@+id/imageView7"
            android:layout_alignTop="@+id/imageView10"
            card_view:srcCompat="?android:attr/textSelectHandle"
            android:layout_alignBottom="@+id/imageView10" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

